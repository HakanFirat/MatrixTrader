<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@+id/fragmentLogin">

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.matrixtrader.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_fragmentLogin_to_fragmentAccountStatement"
            app:destination="@+id/fragmentAccountStatement"/>

    </fragment>

    <fragment
        android:id="@+id/fragmentAccountStatement"
        android:name="com.example.matrixtrader.ui.account.AccountStatementFragment"
        tools:layout="@layout/fragment_account_statement"/>

</navigation>